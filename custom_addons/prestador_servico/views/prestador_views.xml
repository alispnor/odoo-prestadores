<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_prestador_tree" model="ir.ui.view">
        <field name="name">prestador.servico.tree</field>
        <field name="model">prestador.servico</field>
        <field name="arch" type="xml">
            <tree string="Prestadores de Serviço" default_order="name">
                <field name="name"/>
                <field name="categoria"/>
                <field name="celular"/>
                <field name="email"/>
                <field name="cidade"/>
                <field name="uf"/>
                <field name="ativo" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

   <record id="view_prestador_form" model="ir.ui.view">
        <field name="name">prestador.servico.form</field>
        <field name="model">prestador.servico</field>
        <field name="arch" type="xml">
            <form string="Prestador de Serviço">
                <sheet>
                    <group>
                        <group string="Dados Pessoais">
                            <field name="name"/>
                            <field name="cpf_cnpj"/>
                            <field name="categoria"/>
                            <field name="ativo" widget="boolean_toggle"/>
                        </group>
                        <group string="Contato">
                            <field name="celular"/>
                            <field name="email"/>
                        </group>
                    </group>

                    <group string="Endereço">
                        <group>
                            <field name="cep"/>
                            <field name="logradouro"/>
                            <field name="numero"/>
                            <field name="complemento"/>
                        </group>
                        <group>
                            <field name="bairro"/>
                            <field name="cidade"/>
                            <field name="uf"/>
                        </group>
                    </group>
                    
                    <group string="Localização (Latitude e Longitude)">
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_prestador" model="ir.actions.act_window">
        <field name="name">Prestadores de Serviço</field>
        <field name="res_model">prestador.servico</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie um novo prestador de serviço para começar a gerenciar sua rede.
            </p>
        </field>
    </record>

    <menuitem id="menu_prestador_root"
              name="Prestadores de Serviço"
              sequence="10"
              web_icon="prestador_servico_module,static/description/icon.png"/>
    <menuitem id="menu_prestador_management"
              name="Gerenciar Prestadores"
              parent="menu_prestador_root"
              action="action_prestador"/>

</odoo>